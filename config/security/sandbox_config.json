{
  "default_sandbox_config": {
    "mode": "restricted",
    "execution_type": "python",
    "enable_static_analysis": true,
    "enable_runtime_monitoring": true,
    "enable_audit_logging": true,
    "use_container": false,
    "container_image": "python:3.9-alpine",
    "container_memory_limit": "128m",
    "container_cpu_limit": "0.5",
    
    "resource_limits": {
      "max_execution_time": 30.0,
      "max_cpu_time": 10.0,
      "max_memory": 134217728,
      "max_stack_size": 8388608,
      "max_file_size": 10485760,
      "max_total_file_size": 52428800,
      "max_open_files": 20,
      "allow_network": false,
      "allowed_hosts": [],
      "max_processes": 5,
      "max_threads": 10
    },
    
    "allowed_imports": [
      "json", "math", "random", "datetime", "collections", "itertools",
      "functools", "operator", "string", "re", "uuid", "hashlib", "base64",
      "decimal", "fractions", "statistics", "bisect", "heapq", "weakref"
    ],
    
    "forbidden_imports": [
      "os", "sys", "subprocess", "importlib", "exec", "eval", "compile",
      "open", "__import__", "globals", "locals", "vars", "dir",
      "getattr", "setattr", "delattr", "hasattr", "socket", "urllib",
      "http", "requests", "threading", "multiprocessing", "asyncio",
      "ctypes", "gc", "resource", "signal", "atexit"
    ],
    
    "allowed_builtins": [
      "abs", "all", "any", "bin", "bool", "chr", "dict", "enumerate",
      "filter", "float", "format", "int", "isinstance", "len", "list",
      "map", "max", "min", "ord", "range", "reversed", "round", "set",
      "sorted", "str", "sum", "tuple", "type", "zip", "pow", "divmod",
      "hex", "oct", "ascii", "repr", "slice", "bytes", "bytearray",
      "memoryview", "complex", "frozenset", "hash", "id", "callable"
    ],
    
    "allowed_read_paths": [
      "/tmp/sandbox"
    ],
    
    "allowed_write_paths": [
      "/tmp/sandbox"
    ],
    
    "temp_dir_access": true
  },
  
  "strict_config": {
    "mode": "strict",
    "execution_type": "python",
    "enable_static_analysis": true,
    "enable_runtime_monitoring": true,
    "enable_audit_logging": true,
    "use_container": true,
    
    "resource_limits": {
      "max_execution_time": 10.0,
      "max_cpu_time": 5.0,
      "max_memory": 67108864,
      "max_open_files": 10,
      "allow_network": false,
      "max_processes": 1,
      "max_threads": 1
    },
    
    "allowed_imports": [
      "json", "math", "random", "datetime"
    ],
    
    "forbidden_imports": [
      "os", "sys", "subprocess", "importlib", "exec", "eval", "compile",
      "open", "__import__", "globals", "locals", "vars", "dir",
      "getattr", "setattr", "delattr", "hasattr", "socket", "urllib",
      "http", "requests", "threading", "multiprocessing", "asyncio",
      "ctypes", "gc", "resource", "signal", "atexit", "collections",
      "itertools", "functools"
    ]
  },
  
  "development_config": {
    "mode": "development",
    "execution_type": "python",
    "enable_static_analysis": false,
    "enable_runtime_monitoring": true,
    "enable_audit_logging": true,
    "use_container": false,
    
