{
    "server":{
        "host":"127.0.0.1",
        "port":8080,
        "debug":false,
        "workers":1,
        "timeout":60
    },
    "security":{
        "api_keys_enabled":true,
        "allowed_origins":["*"],
        "rate_limit":{
            "enabled":true,
            "requests":100,
            "interval":60,
            "period":60
        },
        "cors":{
            "enabled":true,
            "origins":["*"]
        }
    },
    "endpoints":{
        "chat":{
            "path":"/api/chat",
            "methods":["POST"],
            "handler":"chat"
        },
        "memory":{
            "path":"/api/memory",
            "methods":["GET"],
            "handler":"memory"
        },
        "character":"api/character",
        "system":"api/system"
    },
    "websocket":{
        "enabled":true,
        "path":"/ws",
        "max_connections":1000,
        "message_size":1024,
        "timeout":60
    }
    
}
