{
  "extends": [],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "responsive",
          "screen",
          "theme",
          "import"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["-webkit-line-clamp", "-webkit-box-orient"]
      }
    ],
    "function-no-unknown": null,
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null
  }
}

