# API Configuration
# NEXT_PUBLIC_API_URL: 浏览器端使用的API地址（通常设为 /api 以使用 Next.js rewrites）
NEXT_PUBLIC_API_URL=/api
# BACKEND_API_URL: 服务器端（Next.js API路由和rewrites）使用的后端地址
BACKEND_API_URL=http://localhost:8001/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8001/ws

# Application Configuration
NEXT_PUBLIC_APP_NAME=Zishu AI社区平台
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_COMMUNITY=true
NEXT_PUBLIC_ENABLE_GAMIFICATION=true

