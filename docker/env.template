# Zishu-sensei Docker Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Application Configuration
# =============================================================================
ZISHU_ENV=production
ZISHU_DEBUG=false
ZISHU_LOG_LEVEL=INFO
ZISHU_API_HOST=0.0.0.0
ZISHU_API_PORT=8000

# Security
ZISHU_SECRET_KEY=your-super-secret-key-change-this-in-production
ZISHU_JWT_SECRET=your-jwt-secret-key-change-this-too
ZISHU_JWT_EXPIRE_HOURS=24

# CORS Settings
ZISHU_CORS_ORIGINS=http://localhost:3000,http://localhost:80

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=zishu
POSTGRES_USER=zishu
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database URL (constructed from above values)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# AI/ML Configuration
# =============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Anthropic (if using Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google (if using Gemini)
GOOGLE_API_KEY=your-google-api-key-here

# Local models (if using)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2

# =============================================================================
# Vector Database (if using)
# =============================================================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=zishu-knowledge

# Weaviate (alternative)
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_API_KEY=your-weaviate-api-key

# =============================================================================
# Redis Configuration (for caching and sessions)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# =============================================================================
# Monitoring & Logging
# =============================================================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password
GRAFANA_PORT=3000

# Loki (for log aggregation)
LOKI_PORT=3100

# =============================================================================
# File Storage
# =============================================================================
# Local storage paths
ZISHU_DATA_DIR=/app/data
ZISHU_UPLOAD_DIR=/app/data/uploads
ZISHU_LOG_DIR=/app/logs

# S3 Compatible storage (optional)
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_BUCKET_NAME=zishu-storage
S3_REGION=us-east-1

# =============================================================================
# Email Configuration (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_USE_TLS=true

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_PUBLIC_WS_URL=ws://localhost/ws
NEXT_PUBLIC_APP_NAME=Zishu-sensei
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# Docker Compose Configuration
# =============================================================================
# Container resource limits
API_MEMORY_LIMIT=2g
API_CPU_LIMIT=1.0
POSTGRES_MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=512m

# Network configuration
DOCKER_NETWORK_NAME=zishu-network

# Volume configuration
POSTGRES_DATA_VOLUME=zishu_postgres_data
REDIS_DATA_VOLUME=zishu_redis_data
GRAFANA_DATA_VOLUME=zishu_grafana_data
PROMETHEUS_DATA_VOLUME=zishu_prometheus_data

# =============================================================================
# SSL/TLS Configuration (for production)
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/zishu.crt
SSL_KEY_PATH=/etc/ssl/private/zishu.key
SSL_ENABLED=false

# Let's Encrypt (for automatic SSL)
LETSENCRYPT_EMAIL=your-email@domain.com
LETSENCRYPT_DOMAIN=your-domain.com

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=zishu-backups
