# Zishu-sensei Development Environment Configuration
ZISHU_ENV=development
ZISHU_DEBUG=true
ZISHU_LOG_LEVEL=DEBUG
ZISHU_API_HOST=0.0.0.0
ZISHU_API_PORT=8000
ZISHU_RELOAD=true

# Security - Development keys
ZISHU_SECRET_KEY=dev-secret-key-not-for-production
ZISHU_JWT_SECRET=dev-jwt-secret-key-change-in-production
ZISHU_JWT_EXPIRE_HOURS=24

# CORS Settings
ZISHU_CORS_ORIGINS=*

# Database Configuration - Development
POSTGRES_DB=zishu_dev
POSTGRES_USER=zishu_dev
POSTGRES_PASSWORD=dev_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration - Development
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_pass
REDIS_DB=0

# AI/ML Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Development Tools
JUPYTER_TOKEN=dev-token
PGADMIN_DEFAULT_EMAIL=admin@zishu.dev
PGADMIN_DEFAULT_PASSWORD=admin

# Resource limits
API_MEMORY_LIMIT=1g
POSTGRES_MEMORY_LIMIT=512m
REDIS_MEMORY_LIMIT=256m
