{
  "id": "zishu-base",
  "name": "Zishu-sensei Base Adapter",
  "version": "1.0.0",
  "author": "Zishu Team",
  "description": "害羞可爱的AI助手 - 基础版本适配器，基于Qwen2.5-7B-Instruct模型的LoRA微调",
  "category": "conversation",
  "tags": ["conversational", "chinese", "cute", "shy", "assistant"],
  "adapter_type": "soft",
  "capabilities": [
    {
      "name": "text_generation",
      "description": "文本生成和对话能力",
      "level": "advanced",
      "inputs": ["text", "conversation_history"],
      "outputs": ["text_response"],
      "dependencies": ["transformers", "torch"]
    },
    {
      "name": "chinese_conversation",
      "description": "中文对话交流",
      "level": "expert",
      "inputs": ["chinese_text"],
      "outputs": ["chinese_response"],
      "dependencies": ["transformers"]
    },
    {
      "name": "personality_interaction",
      "description": "害羞可爱的个性化交互",
      "level": "advanced",
      "inputs": ["user_input"],
      "outputs": ["personality_response"],
      "dependencies": []
    }
  ],
  "requirements": {
    "python_version": ">=3.8",
    "packages": {
      "torch": ">=1.13.0",
      "transformers": ">=4.21.0",
      "peft": ">=0.4.0",
      "accelerate": ">=0.20.0"
    },
    "hardware": {
      "min_memory_gb": 8,
      "recommended_memory_gb": 16,
      "gpu_required": true,
      "min_vram_gb": 6
    }
  },
  "permissions": {
    "network_access": false,
    "file_write": false,
    "system_access": false,
    "gpu_access": true,
    "memory_intensive": true
  },
  "created_at": "2025-09-26T08:30:00Z",
  "updated_at": "2025-09-26T08:30:00Z",
  "model_info": {
    "base_model": "Qwen2.5-7B-Instruct",
    "adapter_type": "LoRA",
    "lora_rank": 16,
    "lora_alpha": 32,
    "lora_dropout": 0.05,
    "target_modules": [
      "v_proj", "up_proj", "down_proj", "gate_proj", 
      "q_proj", "k_proj", "o_proj"
    ],
    "task_type": "CAUSAL_LM"
  }
}
