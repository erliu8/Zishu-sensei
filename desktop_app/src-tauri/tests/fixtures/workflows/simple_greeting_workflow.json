{
  "id": "greeting-workflow-001",
  "name": "Simple Greeting Workflow",
  "description": "A simple workflow that greets the user",
  "version": "1.0.0",
  "status": "published",
  "steps": [
    {
      "id": "step-1",
      "name": "Get User Name",
      "step_type": "input",
      "order": 0,
      "config": {
        "variable_name": "user_name",
        "prompt": "Please enter your name",
        "required": true
      },
      "retry_config": {
        "max_retries": 3,
        "retry_delay_ms": 1000,
        "backoff_multiplier": 2.0
      },
      "timeout_seconds": 30,
      "enabled": true
    },
    {
      "id": "step-2",
      "name": "Generate Greeting",
      "step_type": "transform",
      "order": 1,
      "config": {
        "template": "Hello, {{user_name}}! Welcome to Zishu Sensei!",
        "output_variable": "greeting_message"
      },
      "dependencies": ["step-1"],
      "retry_config": {
        "max_retries": 1,
        "retry_delay_ms": 500,
        "backoff_multiplier": 1.0
      },
      "timeout_seconds": 10,
      "enabled": true
    },
    {
      "id": "step-3",
      "name": "Display Greeting",
      "step_type": "output",
      "order": 2,
      "config": {
        "message": "{{greeting_message}}",
        "display_duration_ms": 5000
      },
      "dependencies": ["step-2"],
      "retry_config": {
        "max_retries": 0,
        "retry_delay_ms": 0,
        "backoff_multiplier": 1.0
      },
      "timeout_seconds": 10,
      "enabled": true
    }
  ],
  "config": {
    "timeout_seconds": 60,
    "max_retries": 3,
    "retry_delay_ms": 1000,
    "parallel_execution": false,
    "error_handling": "stop_on_error",
    "logging_enabled": true,
    "telemetry_enabled": true
  },
  "trigger": {
    "trigger_type": "manual",
    "config": {}
  },
  "tags": ["greeting", "simple", "test"],
  "category": "basic",
  "is_template": false,
  "template_id": null,
  "created_at": 1704067200,
  "updated_at": 1704153600
}

