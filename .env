# Zishu-sensei 生产环境配置
ZISHU_ENV=production
ZISHU_DEBUG=false
ZISHU_LOG_LEVEL=INFO
ZISHU_API_HOST=0.0.0.0
ZISHU_API_PORT=8000
ZISHU_RELOAD=false

# Security - 生产环境密钥
ZISHU_SECRET_KEY=ZishuSecure2024ProductionKey!
ZISHU_JWT_SECRET=ZishuJWTSecure2024ProductionKey!
ZISHU_JWT_EXPIRE_HOURS=24

# CORS Settings
ZISHU_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# 数据库配置
POSTGRES_DB=zishu
POSTGRES_USER=zishu
POSTGRES_PASSWORD=ZishuSecure2024!
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=RedisSecure2024!
REDIS_DB=0

# AI/ML配置
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# 向量数据库
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Grafana配置
GRAFANA_PASSWORD=GrafanaAdmin2024!

# 监控配置
PROMETHEUS_RETENTION_TIME=15d

# 日志配置
LOG_FORMAT=json

# 网络配置
NGINX_CLIENT_MAX_BODY_SIZE=100M

# 资源限制
API_MEMORY_LIMIT=2g
POSTGRES_MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=512m
